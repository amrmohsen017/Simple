                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.departementid)

                    <div class="form-group">
                        @Html.LabelFor(model => model.departmentname, htmlAttributes: new { @class = "control-label col-md-2" })
