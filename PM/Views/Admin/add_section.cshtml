@model PM.Models.section

@if (ViewBag.addSectionAlert != null)
{
<script>alert("@ViewBag.addSectionAlert");</script>}

@{ Layout = "~/Views/Shared/new_layout.cshtml"; }
<div class="container" data-layout="container">


    <div class="row g-3 mb-3">
        <div class="col-md-6 col-xxl-3">
            @using (Html.BeginForm())
            {
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>اضافة قسم</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.sectionname, "اسم القسم", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.sectionname, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.sectionname, "", new { @class = "text-danger" })
                            @ViewBag.duplicationError
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">نوع القسم</label>
                        <div class="col-md-10">
                            @Html.DropDownList("sectiontype_id", ViewBag.sectionTypes as SelectList, "اختر نوع القسم", new { @class = "form-control", required = "required" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="اضافة" class="btn btn-default" />
                        </div>
                    </div>
                </div>}

            <div>
                @Html.ActionLink("Back to List", "section_panel")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
