@model PM.Models.governmnet

@{ Layout = "~/Views/Shared/new_layout.cshtml"; }


<div class="container" data-layout="container">


    <div class="row g-3 mb-3">
        <div class="col-md-6 col-xxl-3">
            @if (ViewBag.addGovernmentSuccess != null)
            {
@ViewBag.addGovernmentSuccess}
            @using (Html.BeginForm("AddGovernment", "Admin", FormMethod.Post))
            {
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>governmnet</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.governmentname, "المحافظة", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.governmentname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.governmentname, "", new { @class = "text-danger" })
                            @ViewBag.duplicationError

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>}
            <p style="color:red">
                @Html.Label("", Convert.ToString((string)ViewBag.Duplicate))


            </p>

            <div>
                @Html.ActionLink("Back to List", "Governments")
            </div>

        </div>
    </div>
</div>
