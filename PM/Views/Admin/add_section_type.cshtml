@model PM.Models.section_type

@if (ViewBag.addSectionTypeAlert != null)
{
	<script>alert("@ViewBag.addSectionTypeAlert");</script>
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>اضافة نوع قسم</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.sectiontype, "نوع القسم", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.sectiontype, new { htmlAttributes = new { @class = "form-control", required = "required" } })
				@Html.ValidationMessageFor(model => model.sectiontype, "", new { @class = "text-danger" })
				@ViewBag.duplicationError
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="اضافة" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
